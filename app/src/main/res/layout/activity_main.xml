<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.camhardi.myportfolio.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1a65a7">

        <TextView
            android:layout_width="250dp"
            android:text="My Nanodegree Apps!"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:height="75dp"
            android:gravity="center" />

        <Button
            android:layout_width="250dp"
            android:text="POPULAR MOVIES"
            android:layout_height="wrap_content"
            android:id="@+id/project_one"
            android:background="#F08C35"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="250dp"
            android:text="STOCK HAWK"
            android:layout_height="wrap_content"
            android:id="@+id/project_two"
            android:background="#F08C35"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="250dp"
            android:text="BUILD IT BIGGER"
            android:layout_height="wrap_content"
            android:id="@+id/project_three"
            android:background="#F08C35"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="250dp"
            android:text="MAKE YOUR APP MATERIAL"
            android:layout_height="wrap_content"
            android:id="@+id/project_four"
            android:background="#F08C35"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="250dp"
            android:text="GO UBIQUITIOUS"
            android:layout_height="wrap_content"
            android:id="@+id/project_five"
            android:background="#F08C35"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="250dp"
            android:text="CAPSTONE: MY OWN APP"
            android:layout_height="wrap_content"
            android:id="@+id/project_six"
            android:background="#f03e35"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>
